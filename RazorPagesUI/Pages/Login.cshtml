@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<div class="card shadow-sm" style="width: 100%; max-width: 420px;">
    <div class="card-body p-4">
        <h3 class="mb-4 text-center">Sign in</h3>
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="ModelOnly"
                 class="alert alert-danger py-2 mb-3 validation-summary-no-bullets" data-testid="form-error-msg">
            </div>
        }

        <form method="post">
            <div class="mb-3" data-testid="username-field">
                <label asp-for="Username" class="form-label"></label>
                <input class="form-control" data-testid="input" asp-for="Username" autocomplete="username" />
                <span asp-validation-for="Username" class="text-danger small" data-testid="error-msg"></span>
            </div>

            <div class="mb-3"  data-testid="password-field">
                <label asp-for="Password" class="form-label"></label>
                <input class="form-control" data-testid="input" asp-for="Password" type="password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger small" data-testid="error-msg"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Sign in</button>

            <div class="mt-3 text-muted small text-center">
                <div>Demo Usernames: <code>user</code> / <code>admin</code></div>
                <div>Password: <code>123</code></div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page "{id}"
@model DeleteUserModel

@{
    ViewData["Title"] = "Delete User";

    var img = !string.IsNullOrWhiteSpace(Model.User?.ProfileImage)
        ? "profileImages/" + Model.User.ProfileImage
        : "noimage.jpg";

    var profileImagePath = Url.Content("~/images/" + img);
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">

                    <!-- HEADER -->
                    <div class="text-center mb-4">
                        <h1 class="h3 mb-1">Delete User</h1>
                        <div class="text-muted">This action cannot be undone</div>
                    </div>

                    <!-- ERRORS -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-warning">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    @if (Model.User is null)
                    {
                        <div class="alert alert-secondary mb-0 text-center">
                            User not found.
                        </div>
                    }
                    else
                    {
                        <!-- AVATAR -->
                        <div class="text-center mb-4">
                            <img src="@profileImagePath"
                                 class="rounded-circle shadow-sm"
                                 style="width:120px;height:120px;object-fit:cover;"
                                 alt="User avatar" />
                        </div>

                        <!-- CONFIRMATION -->
                        <div class="alert alert-danger text-center mb-4">
                            <h5 class="mb-2">Are you sure?</h5>
                            <div>
                                You are about to delete user: <strong>@Model.User.Name</strong>
                            </div>
                        </div>

                        <!-- ACTIONS -->
                        <form method="post" class="d-flex justify-content-between">
                            <input type="hidden" asp-for="Id" />

                            <a class="btn btn-outline-secondary"
                               asp-page="/Index">
                                Cancel
                            </a>

                            <button type="submit"
                                    class="btn btn-danger">
                                Yes
                            </button>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

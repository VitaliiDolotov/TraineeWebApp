@page
@model AddUserModel
@{
    ViewData["Title"] = "Add User";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <h1 class="h3 mb-1">Add User</h1>
                        <div class="text-muted">Create a new user record</div>
                    </div>

                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="User.Gender" class="form-label" for="selectGender"></label>
                            <select asp-for="User.Gender"
                                    id="selectGender"
                                    class="form-select"
                                    asp-items="Html.GetEnumSelectList<Gender>()"
                                    data-testid="select-Gender">
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.Name" class="form-label" for="inputUserName"></label>
                            <input class="form-control"
                                   id="inputUserName"
                                   type="text"
                                   asp-for="User.Name"
                                   placeholder="User Name"
                                   data-testid="input-UserName" />
                            <span asp-validation-for="User.Name"
                                  class="text-danger"
                                  data-testid="inputError-UserName"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.YearOfBirth" class="form-label" for="inputYearOfBirth"></label>
                            <input class="form-control"
                                   id="inputYearOfBirth"
                                   aria-describedby="yearOfBirthHelp"
                                   asp-for="User.YearOfBirth"
                                   placeholder="Year of Birth"
                                   data-testid="input-YearOfBirth" />
                            <div id="yearOfBirthHelp" class="form-text" data-testid="inputHint-YearOfBirth">
                                Adults only
                            </div>
                            <span asp-validation-for="User.YearOfBirth"
                                  class="text-danger"
                                  data-testid="inputError-YearOfBirth"></span>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a class="btn btn-outline-secondary"
                               asp-page="/Index"
                               data-testid="button-Cancel">Cancel</a>

                            <button type="submit"
                                    class="btn btn-primary px-4"
                                    data-testid="button-Create">
                                Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

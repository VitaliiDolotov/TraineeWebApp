@page
@model RazorPagesUI.Pages.Forms.AddUserModel
@{
	ViewData["Title"] = "Add User";
}

<h1>Add User</h1>

<form method="post">
	<div class="form-group .padding-xs">
		<label for="inputUserName">User Name</label>
		<input class="form-control" id="inputUserName" type="text" asp-for="User.UserName" placeholder="User Name" data-id="input-UserName" />
	</div>
	<div class="form-group .padding-xs .margin-xs">
		<label for="inputYearOfBirth">Year of Birth</label>
		<input class="form-control" id="inputYearOfBirth" aria-describedby="yearOfBirthHelp" asp-for="User.YearOfBirth" placeholder="Year of Birth" data-id="input-YearOfBirth" />
		<small id="yearOfBirthHelp" class="form-text text-muted">Adults only</small>
	<div class="alert alert-light.padding-xs">
		<a class="btn btn-secondary" asp-page="/Index" data-id="button-Cancel">Cancel</a>
		<button type="submit" class="btn btn-primary" data-id="button-Create">Create</button>
	</div>
</form>



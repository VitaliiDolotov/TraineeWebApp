@page
@model RazorPagesUI.Pages.Forms.AddAddressModel
@{
	ViewData["Title"] = "Add Address";
}

<h1>Add Address</h1>
<form method="post">
	<div class="form-group .padding-xs">
		<label for="inputStreetAddress">Street Address</label>
		<input class="form-control" id="inputUserName" type="text" asp-for="Address.StreetAddress" placeholder="Street Address" data-id="input-StreetAddress" />
	</div>
	<div class="form-group .padding-xs">
		<label for="inputCity">City</label>
		<input class="form-control" id="inputCity" type="text" asp-for="Address.City" placeholder="City" data-id="input-City" />
	</div>
	<div class="form-group .padding-xs">
		<label for="inputState">State</label>
		<input class="form-control" id="inputState" type="text" asp-for="Address.State" placeholder="State" data-id="input-State" />
	</div>
	<div class="form-group .padding-xs">
		<label for="inputZipCode">Zip Code</label>
		<input class="form-control" id="inputZipCode" aria-describedby="zipCodeHelp" type="text" asp-for="Address.ZipCode" placeholder="Zip Code" data-id="input-ZipCode" />
		<small id="zipCodeHelp" class="form-text text-muted">US based Zip code</small>
	</div>
	<div class="alert alert-light.padding-xs">
		<a class="btn btn-secondary" asp-page="/Index" data-id="button-Cancel">Cancel</a>
		<button type="submit" class="btn btn-primary" data-id="button-Create">Create</button>
	</div>
</form>

@page "{id}"
@model RazorPagesUI.Pages.Forms.DeleteAddressModel
@{
	ViewData["Title"] = "Delete Address";
}

<h1>Address delete confirmation</h1>
 
<div class="alert alert-danger">
	<h5>Are you sure you want to delete address with '@Model.Address.StreetAddress' street</h5>
	<form method="post">
		<a class="btn btn-secondary" asp-page="/Index" data-testid="button-Cancel">Cancel</a>
		<button type="submit" class="btn btn-danger" data-testid="button-Yes">Yes</button>
	</form>
</div>
@page
@model AddAddressModel
@{
    ViewData["Title"] = "Add Address";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

        <div class="card shadow-sm">
            <div class="card-body">

                <h3 class="text-center mb-4">Add Address</h3>

                <form method="post">

                    <div class="mb-3">
                        <label asp-for="Address.StreetAddress" class="form-label"></label>
                        <input class="form-control"
                               asp-for="Address.StreetAddress"
                               placeholder="Street address" />
                        <span asp-validation-for="Address.StreetAddress"
                              class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address.City" class="form-label"></label>
                        <input class="form-control"
                               asp-for="Address.City"
                               placeholder="City" />
                        <span asp-validation-for="Address.City"
                              class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address.State" class="form-label"></label>
                        <input class="form-control"
                               asp-for="Address.State"
                               placeholder="State (e.g. NY)" />
                        <span asp-validation-for="Address.State"
                              class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Address.ZipCode" class="form-label"></label>
                        <input class="form-control"
                               asp-for="Address.ZipCode"
                               placeholder="Zip code" />
                        <span asp-validation-for="Address.ZipCode"
                              class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-secondary"
                           asp-page="/Index">
                            Cancel
                        </a>

                        <button type="submit"
                                class="btn btn-primary">
                            Create
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

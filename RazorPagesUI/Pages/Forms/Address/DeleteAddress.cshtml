@page "{id}"
@model DeleteAddressModel
@{
    ViewData["Title"] = "Delete Address";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                        <h1 class="h3 mb-1">Delete Address</h1>
                        <div class="text-muted">This action cannot be undone</div>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-warning">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    @if (Model.Address is null)
                    {
                        <div class="alert alert-secondary mb-0">
                            Address not found.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger text-center mb-4">
                            <h5 class="mb-2">
                                Are you sure you want to delete this address - <strong>@Model.Address.StreetAddress</strong>?
                            </h5>
                        </div>

                        <form method="post" class="d-flex justify-content-between">
                            <input type="hidden" asp-for="Id" />
                           
                            <a class="btn btn-outline-secondary"
                               asp-page="/Index"
                               data-testid="button-Cancel">
                                Cancel
                            </a>
                            
                            <button type="submit"
                                    class="btn btn-danger"
                                    data-testid="button-Yes">
                                Yes
                            </button>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
